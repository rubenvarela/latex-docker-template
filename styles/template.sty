% PDF Metadata Enhancement
% -----------------------------------------------------------------------------
% Override hypersetup with template colors
\AtBeginDocument{%
    \hypersetup{
        linkcolor=primary,
        citecolor=secondary,
        urlcolor=accent
    }
}

