% Horizontal rule
\newcommand{\hr}{\par\noindent\rule{\textwidth}{0.4pt}\par}

% Vertical space shortcuts
\newcommand{\vspacesmall}{\vspace{0.5em}}
\newcommand{\vspacemedium}{\vspace{1em}}
